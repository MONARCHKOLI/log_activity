<h1>Show Page</h1>
<div class="container-sm">
<table class="table table-dark table-striped table-bordered">
  <tbody>
    <tr>
      <th scope="row">Name</th>
      <td scope="row"><%= @user.first_name.capitalize + " "+ @user.last_name.capitalize %></td>
      <td scope="row" align='center' rowspan='3'><%= image_tag @user.avatar, width:'100px' %></td>
    </tr>
    <tr>
      <th scope="row">Gender</th>
      <td scope="row"><%= @user.gender.capitalize %></td>
    </tr>
    <tr>
      <th scope="row">Age</th>
      <td scope="row"><%= @user.age %></td>
    </tr>
    <tr>
      <th scope="row">Date Of Birth</th>
      <td scope="row"><%= @user.date_of_birth %></td>
      <td align='center'><%= button_to 'Edit', edit_user_path(@user), class:'btn btn-primary'%></td>
    </tr>
    <tr>
      <th scope="row">Address</th>
      <td scope="row"><%= @user.address %></td>
      <td align='center'><%= button_to 'Destroy', user_path(@user), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } , class:'btn btn-danger'%></td>
    </tr>
    <tr>
      <th scope="row">Registered On</th>
      <td scope="row"><%= @user.created_at.to_date %></td>
      <td align='center'><%= button_to 'Download Gate Pass', edit_user_path(@user), class:'btn btn-info' %></td>
    </tr>
  </tbody>
</table>

<h2>QR Code</h2>
  <%= image_tag qrcode_path(@user.qr_code.html_safe, format: :svg) %>

</div>
